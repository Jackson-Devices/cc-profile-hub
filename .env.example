# Environment Variables for Claude Wrapper
# Copy this file to '.env' and fill in your values
# IMPORTANT: Never commit .env to version control!

# ========================================
# REQUIRED CONFIGURATION
# ========================================

# Path to the original Claude CLI binary
CLAUDE_PATH=/usr/local/bin/claude

# OAuth Client ID from Anthropic dashboard
OAUTH_CLIENT_ID=your-client-id-here

# OAuth Token URL
OAUTH_TOKEN_URL=https://auth.anthropic.com/oauth/token

# ========================================
# OPTIONAL CONFIGURATION
# ========================================

# OAuth Client Secret (for client credentials flow)
# OAUTH_CLIENT_SECRET=your-client-secret-here

# Logging level (trace, debug, info, warn, error)
LOG_LEVEL=info

# Profiles file path
# PROFILES_PATH=~/.claude-wrapper/profiles.json

# Token storage directory
# TOKEN_STORE_PATH=~/.claude-wrapper/tokens

# Audit log path
# AUDIT_LOG_PATH=~/.claude-wrapper/audit.log

# Enable metrics collection (true/false)
# METRICS_ENABLED=true

# Enable rate limiting (true/false)
# RATE_LIMIT_ENABLED=true

# Process timeout in milliseconds (0 = no timeout)
# PROCESS_TIMEOUT=1800000

# ========================================
# PRODUCTION CONFIGURATION
# ========================================

# Set to 'production' to enable production optimizations
# NODE_ENV=production

# Enable strict SSL certificate verification
# NODE_TLS_REJECT_UNAUTHORIZED=1

# Maximum number of retry attempts for token refresh
# MAX_RETRIES=3

# Health check port (0 = disabled)
# HEALTH_CHECK_PORT=9090

# Prometheus metrics port (0 = disabled)
# PROMETHEUS_PORT=9091
